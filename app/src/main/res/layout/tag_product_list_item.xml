<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius"
        android:layout_margin="@dimen/card_view_margin"
        style="@style/CardView">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/tag_product_list_item_image_view"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/default_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tag_product_list_item_title_view"
                    android:textSize="16dp"
                    tools:text="Aerodynamic Plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"/>

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tag_product_list_item_total_header"
                    android:text="@string/total_header"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"/>

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tag_product_list_item_variants_total_view"
                    tools:text="225"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tag_product_list_item_total_header"
                    android:layout_alignEnd="@+id/tag_product_list_item_title_view"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>