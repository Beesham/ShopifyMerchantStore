<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_view_corner_radius"
            android:layout_margin="@dimen/card_view_margin"
            style="@style/CardView">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    tools:text="product_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/title_padding"
                    android:paddingLeft="@dimen/title_padding"
                    android:paddingEnd="@dimen/title_padding"
                    android:id="@+id/product_title_text_view"
                    android:gravity="center_vertical"
                    android:fontFamily="roboto-regular"
                    android:textSize="@dimen/title_text_size"
                    android:textColor="@android:color/black"/>

            <ImageView
                    android:id="@+id/product_image_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"/>

            <TextView
                    android:id="@+id/product_description_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Description text here"
                    android:padding="@dimen/default_padding"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>